# $Id: Makefile.in,v 1.1 1998-12-17 16:26:01 ghudson Exp $

SHELL=/bin/sh
VPATH=@srcdir@
INSTALL=@INSTALL@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
srcdir=@srcdir@
top_srcdir=@top_srcdir@
prefix=@prefix@
exec_prefix=@exec_prefix@
sbindir=@bindir@
lsbindir=@lsbindir@
mandir=@mandir@
sysconfdir=@sysconfdir@
bitmapsdir=${sysconfdir}/login/bitmaps

CC=@CC@
DEFS=@DEFS@
CPPFLAGS=@CPPFLAGS@
CFLAGS=@CFLAGS@
X_CFLAGS=@X_CFLAGS@
LDFLAGS=@LDFLAGS@
X_LIBS=@X_LIBS@
X_PRE_LIBS=@X_PRE_LIBS@
X_EXTRA_LIBS=@X_EXTRA_LIBS@
LIBS=@LIBS@
ALL_LDFLAGS=${LDFLAGS} ${X_LIBS}
ALL_CFLAGS=${CPPFLAGS} ${CFLAGS} ${X_CFLAGS} ${DEFS}
ALL_LIBS=-lXj ${X_PRE_LIBS} -lX11 ${X_EXTRA_LIBS} ${LIBS}

all: console

console: console.o
	${CC} ${ALL_LDFLAGS} -o $@ console.o ${ALL_LIBS}

.c.o:
	${CC} -c ${ALL_CFLAGS} $<

check:

install:
	${top_srcdir}/mkinstalldirs ${DESTDIR}${lsbindir}
	${top_srcdir}/mkinstalldirs ${DESTDIR}${mandir}/man8
	${top_srcdir}/mkinstalldirs ${DESTDIR}${bitmapsdir}
	${INSTALL_PROGRAM} console ${DESTDIR}${lsbindir}
	${INSTALL} -m 444 ${srcdir}/console.8 ${DESTDIR}${mandir}/man8
	${INSTALL} -m 444 ${srcdir}/console.xbm ${DESTDIR}${bitmapsdir}
	${INSTALL} -m 444 ${srcdir}/gray ${DESTDIR}${bitmapsdir}

clean:
	rm -f console.o console

distclean: clean
	rm -f config.cache config.log config.status Makefile
